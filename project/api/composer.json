{
  "name": "fyodor/project",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "fyodor"
    }
  ],
  "minimum-stability": "stable",
  "config": {
    "process-timeout": 0,
    "sort-packages": true
  },
  "require": {
    "php": "^7.4",
    "php-di/slim-bridge": "^3.4",
    "slim/psr7": "^1.6",
    "slim/slim": "^4.14"
  },
  "require-dev": {
    "overtrue/phplint": "^3.4",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "^3.11",
    "vimeo/psalm": "^5.26"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "lint": "phplint",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "psalm": "psalm"
  }
}
